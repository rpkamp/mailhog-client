        "phpunit/phpunit": "^9.0",
        "php-http/curl-client": "^2.0",
        "swiftmailer/swiftmailer": "^6.2",
        "phpstan/phpstan": "^0.12",
        "pdepend/pdepend": "^2.5",
        "maglnet/composer-require-checker": "^2.0",
        "nyholm/psr7": "^1.2",
        "doctrine/coding-standard": "^8.0"
